<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.creditplus.p2p.dao.UrgentContactorDao">
    
	<select id="getListByUserId" parameterType="Integer" resultType="java.util.Map">
		select t.id,t.user_id,t.name,t.relation,t.mobile,t.mobile_address,t.created_by,t.created_date,t.last_updated_by,t.last_updated_date from urgent_contactor_t t where t.user_id = #{user_id}
	</select>    
	
	<insert id="insertBatch" parameterType="java.util.Map">
		insert into urgent_contactor_t(user_id,name,relation,mobile,mobile_address,created_by,created_date,last_updated_by,last_updated_date)
		values
		<foreach collection="list" item="item" index="index" separator=",">
			(#{item.user_id},#{item.name},#{item.relation},#{item.mobile},#{item.mobile_address},#{item.last_updated_by},ifnull(#{item.sysdate},sysdate()),#{item.last_updated_by},ifnull(#{item.sysdate},sysdate()))
		</foreach>
	</insert>
	
	<delete id="deleteByUserId" parameterType="Integer">
		delete from urgent_contactor_t  where  user_id = #{user_id}
	</delete>
	
	<select id="getUrgentListByUserId" parameterType="Integer" resultType="java.util.Map">
		select sn,user_id,name,relation,mobile,modifytime from p2p.urgent_list where user_id = #{user_id}
	</select>  
</mapper>